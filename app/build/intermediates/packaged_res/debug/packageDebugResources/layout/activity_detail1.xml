<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/detailImage1"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:src="@drawable/imageicon"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/petiteImageView1"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_margin="8dp"
                android:background="@drawable/back_round"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_add_a_photo_24"
                app:layout_constraintBottom_toBottomOf="@id/detailImage1"
                app:layout_constraintEnd_toEndOf="@id/detailImage1" />

            <!-- NuméroID -->
            <TextView
                android:id="@+id/labelNumeroID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="NuméroID:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/detailImage1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailNumeroID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumeroID"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelNumeroID1"
                app:layout_constraintTop_toTopOf="@id/labelNumeroID1"
                app:layout_constraintBottom_toBottomOf="@id/labelNumeroID1" />
            <!-- Numéro d'inscription -->
            <TextView
                android:id="@+id/labelNumero_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Numéro d'inscription:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelNumeroID1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailNumero_inscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero d'inscription"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelNumero_inscription"
                app:layout_constraintTop_toTopOf="@id/labelNumero_inscription"
                app:layout_constraintBottom_toBottomOf="@id/labelNumero_inscription" />

            <!-- Nom -->
            <TextView
                android:id="@+id/labelNom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Nom:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelNumero_inscription"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailNom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelNom1"
                app:layout_constraintTop_toTopOf="@id/labelNom1"
                app:layout_constraintBottom_toBottomOf="@id/labelNom1" />

            <!-- Prénom -->
            <TextView
                android:id="@+id/labelPrenom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Prénom:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelNom1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailPrenom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prénom"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelPrenom1"
                app:layout_constraintTop_toTopOf="@id/labelPrenom1"
                app:layout_constraintBottom_toBottomOf="@id/labelPrenom1" />

            <!-- Mention -->
            <TextView
                android:id="@+id/labelMention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Mention:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelPrenom1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailMention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mention"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelMention"
                app:layout_constraintTop_toTopOf="@id/labelMention"
                app:layout_constraintBottom_toBottomOf="@id/labelMention" />

            <!-- Parcours -->
            <TextView
                android:id="@+id/labelParcours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Parcours:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelMention"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailParcours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcours"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelParcours"
                app:layout_constraintTop_toTopOf="@id/labelParcours"
                app:layout_constraintBottom_toBottomOf="@id/labelParcours"/>

            <!-- Niveau -->
            <TextView
                android:id="@+id/labelNiveau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Niveau:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelParcours"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailNiveau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelNiveau"
                app:layout_constraintTop_toTopOf="@id/labelNiveau"
                app:layout_constraintBottom_toBottomOf="@id/labelNiveau"/>

            <!-- Date de naissance -->
            <TextView
                android:id="@+id/labelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Date de naissance:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelNiveau"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de naissance"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelDate"
                app:layout_constraintTop_toTopOf="@id/labelDate"
                app:layout_constraintBottom_toBottomOf="@id/labelDate"/>

            <!-- Adresse -->
            <TextView
                android:id="@+id/labelAdresse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Adresse:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelDate"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailAdresse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelAdresse1"
                app:layout_constraintTop_toTopOf="@id/labelAdresse1"
                app:layout_constraintBottom_toBottomOf="@id/labelAdresse1" />

            <!-- Téléphone -->
            <TextView
                android:id="@+id/labelTelephone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Téléphone:"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/labelAdresse1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/detailTelephone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Téléphone"
                android:textColor="@color/lavender"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/labelTelephone1"
                app:layout_constraintTop_toTopOf="@id/labelTelephone1"
                app:layout_constraintBottom_toBottomOf="@id/labelTelephone1" />

            <!-- Floating Action Menu -->
            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabMenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:menu_colorNormal="@color/lavender"
                app:menu_colorPressed="@color/lavender"
                app:menu_fab_size="normal"
                app:menu_icon="@drawable/baseline_format_list_bulleted_24"
                app:menu_openDirection="down"
                app:menu_showShadow="true">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_edit_24"
                    app:fab_colorNormal="@color/green"
                    app:fab_showShadow="true"
                    app:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/deleteButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"
                    app:fab_colorNormal="@color/red"
                    app:fab_showShadow="true"
                    app:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/printButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_local_printshop_24"
                    app:fab_colorNormal="@color/lavender"
                    app:fab_showShadow="true"
                    app:fab_size="mini" />
            </com.github.clans.fab.FloatingActionMenu>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>