<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity2">

    <TextView
        android:id="@+id/labelNumeroID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginStart="16dp"
        android:text="NumÃ©ro du cours:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailNumeroCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/labelNumeroID"
        android:layout_alignBaseline="@id/labelNumeroID"
        android:text="Numero cours"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/labelNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNumeroID"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Nom du cours:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailNomCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelNom"
        android:layout_alignBaseline="@id/labelNom"
        android:layout_marginStart="36dp"
        android:text="Nom"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelSalleCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNom"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Salle du cours:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailSalleCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelSalleCours"
        android:layout_alignBaseline="@id/labelSalleCours"
        android:text="Salle"
        android:layout_marginStart="30dp"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelParcoursCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelSalleCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Parcours :"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailParcoursCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelParcoursCours"
        android:layout_alignBaseline="@id/labelParcoursCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="50dp"
        android:text="Parcours"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelNiveauCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelParcoursCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Niveau :"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailNiveauCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelNiveauCours"
        android:layout_alignBaseline="@id/labelNiveauCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="50dp"
        android:text="Niveau"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />
    <TextView
        android:id="@+id/labelDescriptionCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNiveauCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="150dp"
        android:text="Description :"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailDescriptionCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelDescriptionCours"
        android:layout_marginTop="14dp"
        android:layout_marginStart="50dp"
        android:text="Description"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            app:menu_colorNormal="@color/lavender"
            app:menu_colorPressed="@color/lavender"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButtonCours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                app:fab_colorNormal="@color/green"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButtonCours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</RelativeLayout>