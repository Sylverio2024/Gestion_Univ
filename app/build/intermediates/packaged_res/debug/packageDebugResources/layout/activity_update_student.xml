<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateStudent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:background="@drawable/lavender_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modifier les données"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateNumeroID1"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="10dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="NuméroID"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateNum_inscriptionS"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Numéro d'inscription"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateNomS"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Nom"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updatePrenomS"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Prénom"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="13sp"
                android:id="@+id/updateDate_naissanceS"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:hint="Date de naissance"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="13sp"
                android:id="@+id/updateAdresseS"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:hint="Adresse"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />

            <EditText
                android:id="@+id/updateMentionS"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:gravity="start|center_vertical"
                android:hint="Mention"
                android:padding="16sp"
                android:textColor="@color/lavender"
                android:textColorHint="@color/lavender"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/updateParcoursS"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:gravity="start|center_vertical"
                android:hint="Parcours"
                android:padding="16sp"
                android:textColor="@color/lavender"
                android:textColorHint="@color/lavender"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/updateNiveauS"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:gravity="start|center_vertical"
                android:hint="Niveau"
                android:padding="16sp"
                android:textColor="@color/lavender"
                android:textColorHint="@color/lavender"
                android:textSize="13sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="13sp"
                android:id="@+id/updateTelephoneS"
                android:inputType="textPhonetic"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:hint="Téléphone"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />

            <Button
                android:id="@+id/bntUpdateS"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Modifier"
                android:layout_marginStart="100dp"
                android:textSize="15sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </ScrollView>
</androidx.core.widget.NestedScrollView>