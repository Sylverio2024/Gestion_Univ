<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard2"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="153dp">

        <TextView
            android:id="@+id/numD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Numéro cours:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NumeroIDCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/numD"
            android:text="Numéro cours"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NomD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NumeroIDCours"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Nom du cours:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NomCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NumeroIDCours"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/NomD"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Nom du cours"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/SalleCoursD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NomD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Salle du cours:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/SalleCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NomD"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/SalleCoursD"
            android:text="Salle du cours"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ParcoursCoursD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SalleCoursD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Parcours:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ParcoursCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SalleCours"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/ParcoursCoursD"
            android:text="Parcours"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/NiveauCoursD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ParcoursCoursD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Niveau:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NiveauCours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ParcoursCours"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/NiveauCoursD"
            android:text="Niveau"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/DescriptionCoursD"
            android:layout_width="136dp"
            android:layout_height="33dp"
            android:layout_below="@id/NiveauCoursD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Description:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/DescriptionCours"
            android:layout_width="172dp"
            android:layout_height="32dp"
            android:layout_below="@id/NiveauCours"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/DescriptionCoursD"
            android:text="Description"
            android:textColor="@color/lavender"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>