<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity3">

    <TextView
        android:id="@+id/labelNumeroID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginStart="16dp"
        android:text="NumÃ©ro de la salle:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailNumeroSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/labelNumeroID"
        android:layout_alignBaseline="@id/labelNumeroID"
        android:text="Numero salle"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/labelNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNumeroID"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Nom de la salle:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailNomSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelNom"
        android:layout_alignBaseline="@id/labelNom"
        android:layout_marginStart="36dp"
        android:text="Nom"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelStatut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNom"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:text="Statut de la salle:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailStatutSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/labelStatut"
        android:layout_alignBaseline="@id/labelStatut"
        android:text="Statut"
        android:layout_marginStart="30dp"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelStatut"
        android:layout_marginTop="14dp"
        android:layout_marginStart="140dp"
        android:text="Description:"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detailDescriptionSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelDescription"
        android:layout_marginTop="14dp"
        android:layout_marginStart="50dp"
        android:text="Description"
        android:textColor="@color/lavender"
        android:textSize="15sp"
        android:layout_marginBottom="12dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            app:menu_colorNormal="@color/lavender"
            app:menu_colorPressed="@color/lavender"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButtonSalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                app:fab_colorNormal="@color/green"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButtonSalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</RelativeLayout>