<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".updateSalle">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:background="@drawable/lavender_border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modifier les données"
                android:textSize="20dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateNumeroIDSalle"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Numéro de la salle"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateNameSalle"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Nom de la salle"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/updateStatutSalle"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Statut"
                android:textColorHint="@color/lavender"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/updateDescriptionSalle"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="5dp"
                android:padding="16sp"
                android:textSize="13sp"
                android:hint="Description"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColorHint="@color/lavender"
                android:textColor="@color/lavender" />
            <Button
                android:id="@+id/bntUpdateSalle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Modifier"
                android:layout_marginStart="100dp"
                android:textSize="15sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>