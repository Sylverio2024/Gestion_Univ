<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    tools:context=".uploadEvent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bntSaveEvent"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chargé les données"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"/>

                <!-- GridLayout pour afficher les images sélectionnées -->
                <GridLayout
                    android:id="@+id/imageGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/_00901" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/txtNumeroEvent"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="5dp"
                    android:padding="16sp"
                    android:textSize="13sp"
                    android:hint="Numero"
                    android:textColorHint="@color/lavender"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/txtTitreEvent"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="5dp"
                    android:padding="16sp"
                    android:textSize="13sp"
                    android:hint="Titre de l'évènement"
                    android:textColorHint="@color/lavender"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/lavender" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/txtDescriptionEvent"
                    android:background="@drawable/lavender_border"
                    android:layout_marginTop="5dp"
                    android:padding="16sp"
                    android:textSize="13sp"
                    android:hint="Description"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/lavender"
                    android:textColor="@color/lavender" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bntSaveEvent"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Enregistré"
            android:textSize="15sp"
            app:cornerRadius="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>