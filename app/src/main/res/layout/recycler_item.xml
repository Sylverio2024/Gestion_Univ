<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imageicon"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/numD"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:text="NuméroID:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NumeroID"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/numD"
            android:text="NuméroID"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NomD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/NumeroID"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Nom:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NumeroID"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/NomD"
            android:text="Nom"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/PrenomD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/Nom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Prénom:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Nom"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/PrenomD"
            android:text="Prénom"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/SpecialiteD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/Prenom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Spécialité:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Specialite"
            android:layout_width="147dp"
            android:layout_height="30dp"
            android:layout_below="@id/Prenom"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/SpecialiteD"
            android:text="Spécialité"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/AdresseD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/Specialite"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Adresse:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Adresse"
            android:layout_width="147dp"
            android:layout_height="30dp"
            android:layout_below="@id/Specialite"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/AdresseD"
            android:text="Adresse"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/CategorieD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/Adresse"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Catégorie:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Categorie"
            android:layout_width="147dp"
            android:layout_height="30dp"
            android:layout_below="@id/Adresse"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/CategorieD"
            android:text="Catégorie"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TelephoneD"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@id/Categorie"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Téléphone:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Telephone"
            android:layout_width="147dp"
            android:layout_height="30dp"
            android:layout_below="@id/Categorie"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/TelephoneD"
            android:text="Téléphone"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>