<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard1"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="205dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imageicon"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/numD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage1"
            android:text="NuméroID:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/NumeroIDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/numD"
            android:text="NuméroID"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/num_inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:text="N° d'inscription:"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/num_inscriptionE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NumeroIDE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/num_inscription"
            android:gravity="center"
            android:text="N° d'inscription"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/nomD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_inscription"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Nom:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nomE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_inscriptionE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/nomD"
            android:gravity="center"
            android:text="Nom"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/prenomD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Prénom:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/prenomE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/prenomD"
            android:gravity="center"
            android:text="Prénom"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/mentionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prenomD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Mention:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mentionE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prenomE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/mentionD"
            android:gravity="center"
            android:text="Mention"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/parcoursD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mentionD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Parcours:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/parcoursE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mentionE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/parcoursD"
            android:gravity="center"
            android:text="Parcours"
            android:textColor="@color/lavender"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/niveauD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parcoursD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Niveau:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/niveauE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/parcoursE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/niveauD"
            android:gravity="center"
            android:text="Niveau"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/niveauD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="date de naissance:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/niveauE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/dateD"
            android:gravity="center"
            android:text="date de naissance"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adresseD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Adresse:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/adresseE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/adresseD"
            android:gravity="center"
            android:text="Adresse"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/telephoneD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adresseD"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recImage1"
            android:gravity="center"
            android:text="Téléphone:"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/telephoneE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adresseE"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/telephoneD"
            android:gravity="center"
            android:text="Téléphone"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>